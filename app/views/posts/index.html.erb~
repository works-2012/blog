<h1>Listing posts</h1>
<%= will_paginate %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= User.find_by_id(post.user_id).name %></td>
    <td><%= link_to 'Show', post %></td>

  <% if user_signed_in? %>
    <% if current_user.id == post.user_id %>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  <% end %>

  </tr>
<% end %>
</table>
<%= will_paginate %>

