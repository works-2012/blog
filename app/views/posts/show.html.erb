<p id="notice"><%= notice %></p>

<p>
  <b>Author:</b>
  <%= @user.name %>
</p>

<p>
  <b>Create:</b>
  <%= @post.created_at %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Text:</b>
  <%= @post.text %>
</p>

<p>
  <b>Tags:</b>
  <%= @post.tags.map { |t| t.text }.join(", ") %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Back', posts_path %>

<%= render "comments/comment" %>
